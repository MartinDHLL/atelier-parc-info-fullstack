{% extends 'base.html.twig' %} 
{% block title %}Connexion{% endblock %} 
{% block app %}
<div class="overflow-y-scroll w-full h-full flex flex-col gap-y-2 items-center bg-white">
<form method="post">
      <div class="flex flex-col w-full gap-y-10 mt-40">
        {% if error %}
        <div class="alert alert-danger text-red-600">
          identifiants invalides
        </div>
        {% endif %}
        <div class="flex flex-col gap-y-2">
        <label for="email">Email</label>
          <input
            type="email"
            value="{{ last_username }}"
            name="email"
            id="inputEmail"
            class="form-control text-black px-2 py-1 border-2 rounded-xl"
            autocomplete="email"
            required
            autofocus/>
        </div>
        <div class="flex flex-col gap-y-2">
          <label for="password">Mot de passe</label>
          <input
            type="password"
            name="password"
            id="inputPassword"
            class="form-control text-black px-2 py-1 border-2 rounded-xl"
            autocomplete="current-password"
            required/>
          <input
            type="hidden"
            name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"/>
          <div class="checkbox mb-3">
            <label> <input type="checkbox" name="_remember_me" /> Enregister ma session </label>
          </div>
        </div>
        <button class="btn btn-lg btn-primary bg-white text-blue-900 rounded-xl hover:bg-zinc-600 hover:text-white" type="submit">Se connecter</button>
      </div>
</form>
</div>
{% endblock %}
