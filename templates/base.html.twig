<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Atelier Step{% endblock %}</title>
    {% block stylesheets %}{{encore_entry_link_tags("app")}}{% endblock %} 
    {% block javascripts %}{{encore_entry_script_tags("app")}}{% endblock %}
  </head>

  <body class="h-screen w-full">
    {% if app.user %}
    {% include("_partials/header.html.twig") %} 
    <main class="flex flex-col h-[90%] w-full p-2">
      <section class="flex justify-start w-full gap-x-1">
        {# Dashboard button #}
        {{include("_buttons/menuButton.html.twig", {buttonTitle: "Dashboard", route: "home", imgSrc: "table"})}}
        {# Tickets button #}
        {{include("_buttons/menuButton.html.twig", {buttonTitle: "Tickets", route: "tickets", imgSrc: "ticket"})}}
        {# Entreprises button #}
        {{include("_buttons/menuButton.html.twig", {buttonTitle: "Entreprises", route: "entreprises", imgSrc: "entreprise"})}}
        {# Hardwares button #}
        {{include("_buttons/menuButton.html.twig", {buttonTitle: "Hardwares", route: "hardwares", imgSrc: "hardware"})}}
        {# Profile button #}
        {{include("_buttons/menuButton.html.twig", {buttonTitle: "Profile", route: "profile", imgSrc: "profile"})}}
      </section>
      <section class="bg-indigo-100 flex h-[95%] w-full p-2 border-2 border-blue-900">
        {% block app %}{% endblock %}
      </section>
    </main>
    {% else %} 
    {% block body %}{% endblock %} 
    {% endif %}
  </body>
</html>
